{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",
        "module": "nodenext",
        "types": ["node", "express"],
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    }
}
